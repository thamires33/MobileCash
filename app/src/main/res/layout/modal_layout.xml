<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#A500B9"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/txtCbl"
            android:layout_width="219dp"
            android:layout_height="31dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="72dp"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="107dp"

            android:gravity="top"
            android:lineSpacingExtra="4sp"
            android:translationY="-2.09sp" />

        <!-- Botão de fechar (X) -->
        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/x"
            android:contentDescription="Fechar"
            android:padding="8dp" />


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Oba! Você recebeu cashins!"
        android:textSize="18sp" />

    <!-- Espaço entre o texto e os botões -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="104dp">

        <ImageView

            android:id="@+id/vector"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:background="@drawable/circulo"
            tools:layout_editor_absoluteX="55dp" />

        <TextView
            android:id="@+id/txtCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="43dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnAceitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#A400B8"
            android:text="Aceitar"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="98.71dp"
            android:layout_height="41.92dp"
            android:layout_marginLeft="65dp"
            android:layout_weight="0"
            android:backgroundTint="#FEFEFE"
            android:clipToOutline="true"
            android:text="Cancelar"
            android:textColor="#202020"
            app:strokeColor="#0B0A0A"
            app:strokeWidth="1dp" />

    </LinearLayout>

</LinearLayout>
